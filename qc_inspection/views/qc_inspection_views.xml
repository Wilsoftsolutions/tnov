<odoo>
	<data>

		<!-- Form View -->
		<record id="qc_inspect_form_view" model="ir.ui.view">
			<field name="name">qc.inspect.form.view</field>
			<field name="model">qc.inspection</field>
			<field name="arch" type="xml">
				<form string="Qc Inspection" duplicate="false" >
					<header>
						<button name="action_status" attrs="{'invisible': [('status', 'in', ['Confrimed','ready'])]}" string="Confirm" type="object" class="oe_highlight"/>
						<button name="action_waiting_for_approval" attrs="{'invisible': [('status', 'in', ['Confrimed','waiting_for_approval'])]}" string="Send For Approval" type="object" class="oe_highlight"/>

						<field name="status" widget="statusbar"/>
<!--						<field name="status_bar" widget="statusbar"/>-->
					</header>
					<sheet>

						<div class="oe_title">

							<group>
								<group>
									<field name="name"
										   placeholder="Quality Control Inspector ...."
										   attrs="{'readonly':[('status','in', ['Confrimed','waiting_for_approval'])]}"/>
									<field name="ref"
										   placeholder="Ref. SR# ...."
										   attrs="{'readonly':[('status','in', ['Confrimed','waiting_for_approval'])]}"/>
								</group>
								<group>
									<field name="id" string="SR #"/>
<!--									                                        <field name="bundle" />-->
								</group>
							</group>
							<h3 style="text-decoration-line: underline">Purchase Order Details:
							</h3>
							<group>
								<field name="vendor_id"
									   placeholder="Vendor Name ...."
									   attrs="{'readonly':[('status','in', ['Confrimed','waiting_for_approval'])]}"/>

							</group>
							<group>
								<field name="purchase_order_id"
									   placeholder="Purchase Order ...."
									   attrs="{'readonly':[('status','in', ['Confrimed','waiting_for_approval'])]}"/>
							</group>
							<group>
								<field name="po_item_id"
									   placeholder="Article ...." attrs="{'readonly':[('status','in', ['Confrimed','waiting_for_approval'])]}"/>
							</group>
						</div>
						<div style="    border-top-style: solid;
                                    border-top-width: thin; 
                                    margin-bottom: 10px"></div>
						<table style="width:90%">
							<tr class="oe_title">
								<th style="text-align:center">IMAGE</th>
								<th style="text-align:center">Plan</th>
								<th style="text-align:center">36</th>
