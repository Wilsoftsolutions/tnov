<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record model="ir.ui.view" id="view_hr_employee_form_inherit">
        <field name="name">hr.employee.form.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" string="Related User" />
                </xpath>                
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="employee_type_id"  />
                </xpath>
         </field>
    </record>
    
    
    <record model="ir.ui.view" id="view_hr_expense_location_fuel_adjust">
        <field name="name">hr.expense.form.view.location.fuel</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tax_ids']" position="after">
                    <field name="location"  />
                    <field name="loc_from"  />
                    <field name="loc_to"  />
                </xpath>                
             
         </field>
    </record>
    
    <record model="ir.ui.view" id="view_product_product_form_emp_categ">
        <field name="name">product.product.form.view.categ</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="hr_expense.product_product_expense_form_view"/>
            <field name="arch" type="xml">
                              
                <xpath expr="//field[@name='property_account_expense_id']" position="after">
                    <field name="employee_type_id"  />
                </xpath>
         </field>
    </record>
    
    <record model="ir.ui.view" id="view_res_users_form_emp_portal_view">
        <field name="name">res.users.form.view.portal</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
            <field name="arch" type="xml">
                              
                <xpath expr="//header" position="inside">
                    <button name="action_get_portal" type="object" string="Portal" class="oe_highlight"/>
                </xpath>
         </field>
    </record>
</odoo>