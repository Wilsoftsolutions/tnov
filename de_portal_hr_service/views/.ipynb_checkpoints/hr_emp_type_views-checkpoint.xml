<?xml version="1.0" encoding="utf-8"?>
<odoo>

   
    <record id="emp_type_category_tree_view" model="ir.ui.view">
        <field name="name">emp.type.category.tree</field>
        <field name="model">emp.type.category</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="advance_emp_type_category_form_view" model="ir.ui.view">
        <field name="name">emp.type.category.form</field>
        <field name="model">emp.type.category</field>
        <field name="arch" type="xml">
            <form string="HR Approvals">
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="0"/>
                        </h1>
                    </div>
                    <group >
                        <group>
                           <field name="company_id"/>
                          
                        </group>
                        <group>
                           <field name="employee_id" invisible='1'/>
                        </group>
                        
                    </group>
                    
                </sheet>
                
            </form>
        </field>
    </record>
    
    
    
    
    
    <record id="action_emp_type_categ" model="ir.actions.act_window">
        <field name="name">Employee Type</field>
        <field name="res_model">emp.type.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Employee Category.
            </p><p>
                Use this menu to create Employee Category.
            </p>
        </field>
    </record>

    
    <menuitem name="Employee Type"
        parent="hr.menu_human_resources_configuration"
        id="menu_base_hr_emp_type"
        action="action_emp_type_categ"/> 
    
   
</odoo>
