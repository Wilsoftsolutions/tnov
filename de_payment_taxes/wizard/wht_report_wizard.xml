<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_wht_tax_wizard_form" model="ir.ui.view">
            <field name="name">wht.report.wizard.form</field>
            <field name="model">wht.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Batch WHT Wizard">
                    <group>
                      <group>
                          <field name="date_from" />    
                          <field name="company_id"  options="{'no_create': True, 'no_create_edit':True}" />                          
                      </group>
                      <group>
                          <field name="date_to" />                        
                      </group>                       
                   </group>

                   <footer>
                      <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                      <button string="Cancel" class="btn-default" special="cancel"/>
                   </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_wht_tax_wizard_action" model="ir.actions.act_window">
            <field name="name">WHT Tax</field>
            <field name="res_model">wht.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_wht_tax_wizard_form"/>
        </record> 
    
    
       <menuitem
        id="wht_pay_tax_wizard_menuitem"
        name="WHT Tax Report"
        parent="account.menu_finance_reports"
        sequence="11"
        action="de_payment_taxes.open_wht_tax_wizard_action"
    />


</odoo>