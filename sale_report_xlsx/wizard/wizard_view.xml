<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_reports_xlsx_form_id" model="ir.ui.view">
            <field name="model">reports.sale.xlsx</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <group>
                            <field name="sale_team_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="get_print_data" type="object" string="Print"/>
                        <button string="Cancel" type="cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="sale_reports_xlsx_action_id" model="ir.actions.act_window">
            <field name="name">Sale Xlsx Report</field>
            <field name="res_model">reports.sale.xlsx</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="purchase_xlsx_menu_action_id" parent="purchase.purchase_report"
                  action="sale_reports_xlsx_action_id"/>

        <menuitem id="sale_reports_xlsx_menu_action_id" parent="sale.menu_sale_report"
                  action="sale_reports_xlsx_action_id"/>

    </data>
</odoo>