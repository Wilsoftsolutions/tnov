<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="id_of_the_template">
			<t t-set="company" t-value="user.company_id"/>

			<!--					<div class="header" >-->

			<div class="header" style="font-size:10px;">
				<style>
					.tb_border{
					border-bottom : 1px solid lightgray;
					}
				</style>
				<!--                         header of the report-->
				<h4 class="text-center" >
					<b>Sale Invoice</b>
				</h4>

				<!--                       second section of the report-->
				<t t-foreach="doc" t-as="o">

					<div class="container">
						<div class="row">
							<div class="col-7" style="border:1px solid lightgray;">
								<div class="row">
									<div class="col-4">
										<img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
											 style="height:130px;" width="100%"/>
									</div>

									<div class="col-8">
										<span>
											<h6>
												<b>GLANZ DESIGNS LIMITED</b>
											</h6>
											<p style="font-size:10px;margin-top:-10px">124/1, Quaid-e-Azam Industrial
												Estate
												Kot Lakhpat, Lahore, Punjab
												54700
											</p>
											<p style="font-size:10px; margin-top:-10px"><b>Phone :</b>Tel #
												<t t-esc="company.phone"/>
												<br/>
												<b>Address :</b>
												<t t-esc="company.street"/>
												<br/>
												<b>E-mail :</b>
												<t t-esc="company.email"/>
												<br/>
												<b>NTN :</b>
												<t t-esc="company.vat"/>
												<br/>
												<b>SRTN :</b>
												<t t-esc="company.partner_id.x_studio_stn"/>

												<br/>
											</p>
										</span>
									</div>
								</div>
							</div>
							<div class="col-5 text-right">
								<p style="font-size:10px;margin-top:-7px;">
									<b>Printed By:</b>
									<span style="border-bottom:1px solid lightgray; margin-left:10px">
										<t t-esc="user.name"/>
									</span>
								</p>
								<p style="font-size:10px;margin-top:-7px;">
									<b>Printed On:</b>
									<span style="border-bottom:1px solid lightgray; margin-left:10px">
										<t t-esc="date"/>
									</span>
								</p>
								<p style="font-size:10px;margin-top:-7px;">
									<b>Invoice number:</b>
									<span style="border-bottom:1px solid lightgray; margin-left:10px">
										<t t-esc="o.name"/>
									</span>
								</p>
								<p style="font-size:10px;margin-top:-7px;">
									<b>Invoice date:</b>
									<span style="border-bottom:1px solid lightgray; margin-left:10px">
										<t t-esc="o.invoice_date"/>
									</span>
								</p>
								<p style="font-size:10px;margin-top:-7px;">
									<b>SO Number :</b>
									<span style="border-bottom:1px solid lightgray; margin-left:10px">
										<t t-esc="o.invoice_origin"/>
									</span>
								</p>
							</div>
						</div>


					</div>
				</t>
			</div>

			<div class="footer" >
				<div class="col-6 mt-2" style="border:1px solid lightgray;font-size:10px;">
					<p>
						Head Office: 124/1, Industrial Estate Kot
						<br/>
						Lakhpat,Lahore<br/>Phone: +92-42-35121668-9
					</p>
				</div>
			</div>
		</template>

	</data>
</odoo>
